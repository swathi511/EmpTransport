<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout android:id="@+id/am_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <TextView android:id="@+id/aad_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Name (XXXXXXXXXX)"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView android:id="@+id/aad_iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_power"
            android:gravity="center"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Trips"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:padding="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"/>


    <ImageButton android:id="@+id/aad_ib_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_refresh"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:visibility="gone"/>

    <TextView android:id="@+id/aad_tv_no_duties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Duties Allocated"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/aad_rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>