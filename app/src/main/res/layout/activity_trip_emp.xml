<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout android:id="@+id/am_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Staff Details "
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:padding="12dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView android:id="@+id/ate_tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rect_white_stroke_bg"
                android:gravity="center"
                android:padding="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp" />

        </RelativeLayout>


        <TextView android:id="@+id/ate_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_margin="16dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/round_btn"
                    android:layout_marginRight="12dp"/>

                <TextView android:id="@+id/ate_tv_spoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC"
                    android:textSize="16sp"
                    android:textColor="#1d9c8c"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ( start point )"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#404040"
                android:layout_marginLeft="5dp" />

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/round_btn"
                    android:layout_marginRight="12dp"/>
                <TextView android:id="@+id/ate_tv_epoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ"
                    android:textSize="16sp"
                    android:textColor="#1d9c8c"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ( end point )"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>



        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stoppages "
            android:textColor="#646464"
            android:textSize="18sp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="8dp" />

        <ImageView android:id="@+id/ate_iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <ExpandableListView
            android:id="@+id/ate_Exp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="16dp" />




    </LinearLayout>

</ScrollView>
